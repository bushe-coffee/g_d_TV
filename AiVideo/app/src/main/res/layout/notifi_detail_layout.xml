<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notifi_page_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:gravity="center"
            android:focusableInTouchMode="false"
            android:text="@string/app_name"
            android:textColor="@android:color/darker_gray"
            android:textSize="15dp" />

        <Button
            android:id="@+id/notifi_page_last"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/white_background_button"
            android:padding="4dp"
            android:layout_alignParentLeft="true"
            android:text="@string/last_button"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <Button
            android:id="@+id/notifi_page_next"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/white_background_button"
            android:padding="4dp"
            android:layout_alignParentRight="true"
            android:text="@string/next_button"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notifi_page_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:padding="8dp"
            android:focusableInTouchMode="false"
            android:text="@string/app_name"
            android:textColor="@android:color/darker_gray"
            android:textSize="15dp" />

    </RelativeLayout>

</LinearLayout>