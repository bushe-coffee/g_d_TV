<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/chang_size_background_layout"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_content_container"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/item_content_container_image"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/item_content_container_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/item_content_container_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_content_container_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:textSize="13dp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_content_ads"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_content_ads_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </LinearLayout>

</LinearLayout>